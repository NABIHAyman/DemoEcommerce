{{ form_start(form) }}
<div class="space-y-4">
    {{ form_row(form.name) }}

    <div class="grid grid-cols-2 gap-4">
        {{ form_row(form.category) }}
        {{ form_row(form.price) }}
    </div>

    {{ form_row(form.description) }}
    {{ form_row(form.isTop) }}
</div>

<div class="flex items-center gap-4 mt-8 pt-6 border-t border-slate-100">
    <button class="bg-primary hover:opacity-90 text-white font-bold py-2.5 px-6 rounded transition-colors shadow-sm">
        {{ button_label|default('Save Product') }}
    </button>
    <a href="{{ path('app_admin_product_index') }}" class="text-slate-500 font-bold hover:text-slate-800 text-sm transition-colors">Cancel</a>
</div>
{{ form_end(form) }}
