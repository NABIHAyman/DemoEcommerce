{% extends 'admin/base.html.twig' %}
{% block page_title %}Products Management{% endblock %}

{% block body %}
    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-slate-800">All Products</h1>
        <a href="{{ path('app_admin_product_new') }}" class="bg-primary hover:opacity-90 text-white px-4 py-2 rounded-lg font-bold text-sm flex items-center gap-2 transition-opacity shadow-sm">
            <span class="material-symbols-outlined text-sm">add</span> Create new
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <table class="w-full text-left">
            <thead class="bg-slate-50 text-slate-500 text-[10px] uppercase font-bold tracking-widest border-b border-slate-200">
            <tr>
                <th class="px-6 py-4">Product</th>
                <th class="px-6 py-4">Category</th>
                <th class="px-6 py-4">Price</th>
                <th class="px-6 py-4 text-center">Top</th>
                <th class="px-6 py-4 text-right">Actions</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
            {% for product in products %}
                <tr class="hover:bg-slate-50 transition-colors">
                    <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 bg-slate-100 rounded overflow-hidden">
                                <img src="https://picsum.photos/seed/{{ product.id }}/50/50" class="w-full h-full object-cover">
                            </div>
                            <span class="font-bold text-slate-800 text-sm">{{ product.name }}</span>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <span class="bg-slate-100 text-slate-600 px-2.5 py-1 rounded-full text-[10px] font-bold tracking-widest uppercase">
                            {{ product.category.name }}
                        </span>
                    </td>
                    <td class="px-6 py-4 font-bold text-slate-800 text-sm">
                        {{ (product.price / 100)|number_format(2, '.', ',') }} â‚¬
                    </td>
                    <td class="px-6 py-4 text-center">
                        {% if product.isTop %}
                            <span class="material-symbols-outlined text-yellow-500 text-base">star</span>
                        {% else %}
                            <span class="material-symbols-outlined text-slate-300 text-base">horizontal_rule</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-right flex justify-end gap-2">
                        <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="text-blue-600 hover:bg-blue-50 p-1.5 rounded transition-colors" title="Edit">
                            <span class="material-symbols-outlined text-[20px]">edit</span>
                        </a>
                        <form method="post" action="{{ path('app_admin_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Supprimer ce produit ?');" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button class="text-red-500 hover:bg-red-50 p-1.5 rounded transition-colors" title="Delete">
                                <span class="material-symbols-outlined text-[20px]">delete</span>
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-12 text-center text-slate-500 text-sm">No products found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
