{% extends 'base.html.twig' %}

{% block title %}Our Catalog | Minimalist Store{% endblock %}

{% block body %}
    <div class="mb-4">
        <h2 class="text-4xl font-light tracking-tight text-slate-900 dark:text-white">Our Collection</h2>
        <p class="mt-2 text-slate-500 dark:text-slate-400 text-sm">Sustainable essentials for the modern wardrobe.</p>
    </div>

    <section class="mb-12 flex flex-wrap items-center justify-between gap-4 py-4 border-y border-primary/10">
        <div class="flex flex-wrap items-center gap-4">
            <span class="text-sm font-bold uppercase tracking-widest text-slate-500 mr-2">Filter by Category:</span>

            {# Bouton "All Products" #}
            <a href="{{ path('app_products') }}" class="flex items-center gap-2 px-4 py-2 border rounded shadow-sm transition-all text-sm font-medium {% if current_category is null %}bg-slate-900 text-white border-slate-900 dark:bg-primary dark:border-primary{% else %}bg-white text-slate-700 border-slate-200 hover:border-primary dark:bg-slate-800 dark:text-slate-300 dark:border-slate-700{% endif %}">
                All
            </a>

            {# Boucle sur les catégories de la BDD #}
            {% for cat in categories %}
                <a href="{{ path('app_products_by_category', {'id': cat.id}) }}" class="flex items-center gap-2 px-4 py-2 border rounded shadow-sm transition-all text-sm font-medium {% if current_category and current_category.id == cat.id %}bg-slate-900 text-white border-slate-900 dark:bg-primary dark:border-primary{% else %}bg-white text-slate-700 border-slate-200 hover:border-primary dark:bg-slate-800 dark:text-slate-300 dark:border-slate-700{% endif %}">
                    {{ cat.name }}
                </a>
            {% endfor %}
        </div>

        <div class="flex items-center gap-2">
            <span class="text-xs text-slate-400 uppercase tracking-widest font-semibold mr-2">Sort by</span>
            <button class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded shadow-sm hover:border-primary transition-all text-sm font-medium">
                Newest <span class="material-symbols-outlined text-sm">swap_vert</span>
            </button>
        </div>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
        {% for product in products %}
            <div class="group bg-white dark:bg-slate-800 rounded-sm shadow-[0_4px_6px_rgba(0,0,0,0.05)] hover:shadow-xl transition-shadow overflow-hidden flex flex-col h-full">

                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="relative aspect-[4/5] overflow-hidden bg-slate-100 block">
                    {# Image dynamique générée avec un seed fixe basé sur l'ID #}
                    <img class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" src="https://picsum.photos/seed/{{ product.id }}/400/500" alt="{{ product.name }}">

                    {% if product.isTop %}
                        <div class="absolute top-4 left-4">
                            <span class="bg-primary text-white text-[10px] font-bold px-2 py-1 uppercase tracking-widest rounded-sm">Top</span>
                        </div>
                    {% endif %}
                </a>

                <div class="p-6 flex flex-col grow">
                    <div class="flex justify-between items-start mb-2">
                        <span class="text-[10px] text-primary uppercase font-bold tracking-widest">{{ product.category.name }}</span>
                        <span class="text-lg font-bold text-slate-900 dark:text-white">{{ (product.price / 100)|number_format(2, '.', ',') }} €</span>
                    </div>

                    <a href="{{ path('app_product_show', {'id': product.id}) }}">
                        <h3 class="text-lg font-bold text-slate-900 dark:text-white leading-tight mb-2 hover:text-primary transition-colors">{{ product.name }}</h3>
                    </a>

                    <p class="text-sm text-slate-500 dark:text-slate-400 mb-6 line-clamp-2">{{ product.description }}</p>

                    <div class="mt-auto">
                        <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="w-full bg-slate-900 hover:bg-primary dark:bg-primary dark:hover:bg-primary/90 text-white py-3 rounded-sm font-bold text-sm tracking-widest uppercase transition-all flex items-center justify-center gap-2 group/btn">
                            <span class="material-symbols-outlined text-lg">shopping_cart</span>
                            Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full py-20 text-center text-slate-500">
                <span class="material-symbols-outlined text-5xl mb-4 opacity-30">inventory_2</span>
                <h3 class="text-xl font-bold mb-2">No products found</h3>
                <p>We couldn't find any products in this category at the moment.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
