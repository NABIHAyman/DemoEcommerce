{% extends 'base.html.twig' %}

{% block title %}Your Cart | Minimalist Store{% endblock %}

{% block body %}
    <nav class="flex items-center gap-2 text-sm text-slate-500 mb-8 mt-4">
        <a class="hover:text-primary transition-colors font-medium" href="{{ path('app_products') }}">Catalog</a>
        <span class="material-symbols-outlined text-xs">chevron_right</span>
        <span class="text-slate-900 dark:text-slate-300 font-bold">Shopping Cart</span>
    </nav>

    <div class="flex items-baseline justify-between mb-6">
        <h1 class="text-3xl font-black text-slate-900 dark:text-white tracking-tight">Your Cart</h1>
        <span class="text-slate-500 font-medium bg-slate-100 dark:bg-slate-800 px-3 py-1 rounded-full text-sm">{{ cart_count }} items</span>
    </div>

    {% if cart|length > 0 %}
        <div class="flex flex-col lg:flex-row gap-8">

            <div class="flex-grow space-y-6">
                {% for item in cart %}
                    <div class="bg-white dark:bg-slate-900 p-5 rounded-xl shadow-[0_2px_8px_rgba(0,0,0,0.04)] border border-slate-100 dark:border-slate-800 flex flex-col sm:flex-row gap-6 hover:border-primary/30 transition-colors">

                        <div class="w-full sm:w-32 h-32 bg-slate-100 dark:bg-slate-800 rounded-lg overflow-hidden shrink-0">
                            <img src="https://picsum.photos/seed/{{ item.product.id }}/200/200" alt="{{ item.product.name }}" class="w-full h-full object-cover">
                        </div>

                        <div class="flex-grow flex flex-col justify-between">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="text-lg font-bold text-slate-900 dark:text-white leading-tight">
                                        <a href="{{ path('app_product_show', {'id': item.product.id}) }}" class="hover:text-primary transition-colors">{{ item.product.name }}</a>
                                    </h3>
                                    <p class="text-xs text-slate-500 mt-1 uppercase tracking-widest font-semibold">{{ item.product.category.name }}</p>
                                </div>
                                <p class="text-lg font-bold text-slate-900 dark:text-white">{{ (item.product.price / 100)|number_format(2, '.', ',') }} €</p>
                            </div>

                            <div class="flex items-center justify-between mt-4">
                                <div class="flex items-center gap-3 border border-slate-200 dark:border-slate-700 rounded-lg px-4 py-1.5 bg-slate-50 dark:bg-slate-800">
                                    <span class="text-xs text-slate-500 font-bold uppercase tracking-widest">Qty</span>
                                    <span class="text-sm font-bold text-slate-900 dark:text-white">{{ item.quantity }}</span>
                                </div>

                                <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="flex items-center gap-1 text-slate-400 hover:text-red-500 transition-colors text-sm font-medium">
                                    <span class="material-symbols-outlined text-lg">delete</span>
                                    Remove
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="pt-4">
                    <a href="{{ path('app_products') }}" class="inline-flex items-center gap-2 text-primary font-bold hover:gap-3 transition-all">
                        <span class="material-symbols-outlined">arrow_back</span>
                        Continue Shopping
                    </a>
                </div>
            </div>

            <div class="w-full lg:w-96">
                <div class="bg-white dark:bg-slate-900 p-8 rounded-xl shadow-[0_4px_20px_rgba(0,0,0,0.06)] border border-slate-100 dark:border-slate-800 sticky top-28">
                    <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-6 tracking-tight">Order Summary</h2>

                    <div class="space-y-4 mb-6">
                        <div class="flex justify-between text-slate-500 font-medium text-sm">
                            <span>Subtotal</span>
                            <span class="text-slate-900 dark:text-white">{{ (total / 100)|number_format(2, '.', ',') }} €</span>
                        </div>
                        <div class="flex justify-between text-slate-500 font-medium text-sm">
                            <span>Shipping</span>
                            <span class="text-primary font-bold">Free</span>
                        </div>
                    </div>

                    <div class="border-t border-slate-100 dark:border-slate-800 pt-6 mb-8">
                        <div class="flex justify-between items-end">
                            <span class="text-slate-900 dark:text-white font-bold text-lg">Total</span>
                            <div class="text-right">
                                <p class="text-3xl font-black text-slate-900 dark:text-white leading-none">{{ (total / 100)|number_format(2, '.', ',') }} €</p>
                                <p class="text-[10px] text-slate-400 mt-1.5 uppercase tracking-widest">Incl. VAT</p>
                            </div>
                        </div>
                    </div>

                    {# --- INTÉGRATION INTELLIGENTE DES CONSIGNES DU PROFESSEUR --- #}
                    {% if app.user %}
                        <div class="mb-4 text-center">
                            <span class="inline-flex items-center gap-1.5 text-xs font-bold text-green-700 bg-green-100 dark:bg-green-900/30 dark:text-green-400 px-3 py-1.5 rounded-full">
                                <span class="material-symbols-outlined text-sm">check_circle</span>
                                Panier enregistré !
                            </span>
                        </div>
                        <a href="{{ path('app_order_create') }}" class="w-full bg-slate-900 hover:bg-primary dark:bg-primary dark:hover:bg-primary/90 text-white py-4 rounded-lg font-bold text-sm uppercase tracking-widest shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-3 group">
                            Proceed to Checkout
                            <span class="material-symbols-outlined text-lg group-hover:translate-x-1 transition-transform">lock</span>
                        </a>
                    {% else %}
                        <div class="mb-4 p-3 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800/50 rounded-lg text-amber-800 dark:text-amber-400 text-xs text-center font-medium leading-relaxed">
                            <span class="material-symbols-outlined text-sm align-middle mb-0.5">warning</span><br>
                            Veuillez vous connecter pour enregistrer et valider votre panier.
                        </div>
                        <a href="{{ path('app_login') }}" class="w-full bg-amber-500 hover:bg-amber-600 text-white py-4 rounded-lg font-bold text-sm uppercase tracking-widest transition-all flex items-center justify-center gap-3">
                            Login to Checkout
                            <span class="material-symbols-outlined text-lg">login</span>
                        </a>
                    {% endif %}

                    <div class="mt-8 space-y-3">
                        <div class="flex items-center gap-3 text-xs text-slate-500 font-medium">
                            <span class="material-symbols-outlined text-primary text-base">local_shipping</span>
                            <span>Free shipping on all orders</span>
                        </div>
                        <div class="flex items-center gap-3 text-xs text-slate-500 font-medium">
                            <span class="material-symbols-outlined text-primary text-base">verified_user</span>
                            <span>Secure encrypted checkout</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    {% else %}
        <div class="flex flex-col items-center justify-center py-24 px-4 text-center bg-white dark:bg-slate-900 rounded-2xl border border-slate-100 dark:border-slate-800 shadow-sm mt-4">
            <div class="bg-slate-50 dark:bg-slate-800 w-24 h-24 rounded-full flex items-center justify-center mb-6">
                <span class="material-symbols-outlined text-5xl text-slate-300 dark:text-slate-600">shopping_cart_off</span>
            </div>
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-3 tracking-tight">Your cart is empty</h2>
            <p class="text-slate-500 mb-8 max-w-sm text-sm leading-relaxed">Looks like you haven't added anything to your cart yet. Explore our latest collections and find something you love!</p>
            <a href="{{ path('app_products') }}" class="bg-slate-900 hover:bg-primary dark:bg-primary dark:hover:bg-primary/90 text-white px-8 py-4 rounded-lg font-bold text-xs uppercase tracking-widest transition-all shadow-md">
                Start Shopping
            </a>
        </div>
    {% endif %}
{% endblock %}
