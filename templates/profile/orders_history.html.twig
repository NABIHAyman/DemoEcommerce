{% extends 'base.html.twig' %}

{% block title %}My Orders | Minimalist Store{% endblock %}

{% block body %}
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 py-4">

        <aside class="lg:col-span-1 space-y-2">
            <a class="flex items-center gap-3 px-4 py-2 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors font-medium" href="{{ path('app_user_profile') }}">
                <span class="material-symbols-outlined">dashboard</span> Profile
            </a>
            <a class="flex items-center gap-3 px-4 py-2 bg-primary/10 text-primary rounded-lg font-bold transition-colors" href="{{ path('app_profile_orders_history') }}">
                <span class="material-symbols-outlined">package_2</span> My Orders
            </a>
            <a class="flex items-center gap-3 px-4 py-2 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors font-medium" href="{{ path('app_logout') }}">
                <span class="material-symbols-outlined text-red-500">logout</span> Logout
            </a>
        </aside>

        <div class="lg:col-span-3">
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">Order History</h1>

            <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead class="bg-slate-50 dark:bg-slate-800/50 text-slate-400 text-[10px] font-bold uppercase tracking-widest">
                        <tr>
                            <th class="px-6 py-4">Order ID</th>
                            <th class="px-6 py-4">Date</th>
                            <th class="px-6 py-4">Total</th>
                            <th class="px-6 py-4">Status</th>
                            <th class="px-6 py-4 text-right">Action</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-50 dark:divide-slate-800">
                        {% for order in orders %}
                            <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-800/30 transition-colors">
                                <td class="px-6 py-4 text-sm font-bold text-slate-900 dark:text-white">#ORD-{{ order.id }}</td>
                                <td class="px-6 py-4 text-sm text-slate-500">{{ order.createdAt|date('M d, Y') }}</td>
                                <td class="px-6 py-4 text-sm font-bold text-slate-900 dark:text-white">{{ (order.total / 100)|number_format(2, '.', ',') }} â‚¬</td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 rounded-full text-[10px] font-bold uppercase bg-primary/10 text-primary">{{ order.status }}</span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <a href="{{ path('app_profile_order_show', {id: order.id}) }}" class="text-primary hover:underline font-bold text-xs uppercase tracking-widest">Details</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="px-6 py-10 text-center text-slate-400 text-sm italic">You haven't placed any orders yet.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# --- LA PAGINATION MAISON --- #}
                {% if totalPages > 1 %}
                    <div class="p-4 border-t border-slate-100 dark:border-slate-800 flex items-center justify-between">
                        <span class="text-xs text-slate-500 font-medium">Page {{ currentPage }} of {{ totalPages }}</span>

                        <div class="flex gap-2">
                            {% if currentPage > 1 %}
                                <a href="{{ path('app_profile_orders_history', {page: currentPage - 1}) }}" class="px-3 py-1.5 border border-slate-200 dark:border-slate-700 rounded text-xs font-bold hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">Previous</a>
                            {% else %}
                                <span class="px-3 py-1.5 border border-slate-100 dark:border-slate-800 rounded text-xs font-bold text-slate-300 dark:text-slate-600 cursor-not-allowed">Previous</span>
                            {% endif %}

                            {% if currentPage < totalPages %}
                                <a href="{{ path('app_profile_orders_history', {page: currentPage + 1}) }}" class="px-3 py-1.5 border border-slate-200 dark:border-slate-700 rounded text-xs font-bold hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">Next</a>
                            {% else %}
                                <span class="px-3 py-1.5 border border-slate-100 dark:border-slate-800 rounded text-xs font-bold text-slate-300 dark:text-slate-600 cursor-not-allowed">Next</span>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
