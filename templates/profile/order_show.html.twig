{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }} | Minimalist Store{% endblock %}

{% block body %}
    <div class="w-full py-2">
        <nav class="flex items-center justify-between mb-8">
            <a class="flex items-center gap-2 text-primary hover:opacity-80 transition-opacity font-bold text-sm uppercase tracking-widest" href="{{ path('app_user_profile') }}">
                <span class="material-symbols-outlined text-base">arrow_back</span>
                Back to Dashboard
            </a>
            <div class="flex gap-3">
                <button onclick="window.print()" class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded text-[10px] font-bold uppercase tracking-widest hover:bg-slate-50 transition-colors shadow-sm">
                    <span class="material-symbols-outlined text-lg">print</span>
                    Print Invoice
                </button>
                <button class="flex items-center gap-2 px-4 py-2 bg-primary text-white rounded text-[10px] font-bold uppercase tracking-widest hover:opacity-90 transition-opacity shadow-sm">
                    <span class="material-symbols-outlined text-lg">local_shipping</span>
                    Track Shipment
                </button>
            </div>
        </nav>

        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-10 border-b border-slate-200 dark:border-slate-700 pb-8">
            <div class="space-y-2">
                <div class="flex items-center gap-3">
                    <h1 class="text-4xl font-black tracking-tight text-slate-900 dark:text-slate-50">Order #{{ order.id }}</h1>
                    <span class="inline-flex items-center px-3 py-1 rounded bg-primary/10 text-primary text-xs font-bold uppercase tracking-wider">
                    {{ order.status }}
                </span>
                </div>
                <p class="text-slate-500 dark:text-slate-400 font-medium">Placed on {{ order.createdAt|date('d/m/Y') }} at {{ order.createdAt|date('H:i') }}</p>
            </div>
            <div class="flex gap-8 text-sm">
                <div>
                    <p class="text-slate-400 dark:text-slate-500 uppercase text-[10px] font-bold tracking-widest mb-1">Payment Method</p>
                    <p class="font-semibold text-slate-900 dark:text-white">Credit Card (**** 4242)</p>
                </div>
                <div>
                    <p class="text-slate-400 dark:text-slate-500 uppercase text-[10px] font-bold tracking-widest mb-1">Shipping Method</p>
                    <p class="font-semibold text-slate-900 dark:text-white">Express Delivery</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <div class="lg:col-span-2 space-y-6">

                <div class="bg-white dark:bg-slate-800 rounded shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
                    <div class="p-6 border-b border-slate-100 dark:border-slate-700">
                        <h2 class="text-lg font-bold flex items-center gap-2 text-slate-900 dark:text-white">
                            <span class="material-symbols-outlined text-primary">shopping_bag</span>
                            Items Purchased
                        </h2>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead class="bg-slate-50 dark:bg-slate-900/50 text-slate-500 dark:text-slate-400 text-[10px] font-bold uppercase tracking-widest">
                            <tr>
                                <th class="px-6 py-4">Product</th>
                                <th class="px-6 py-4">Unit Price</th>
                                <th class="px-6 py-4 text-center">Qty</th>
                                <th class="px-6 py-4 text-right">Subtotal</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                            {% for item in order.items %}
                                <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-700/30 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-4">
                                            <div class="h-16 w-16 bg-slate-100 dark:bg-slate-700 rounded flex items-center justify-center overflow-hidden shrink-0 border border-slate-100 dark:border-slate-600">
                                                {# L'image est générée dynamiquement avec le nom du produit #}
                                                <img src="https://picsum.photos/seed/{{ item.productName|url_encode }}/100/100" class="h-full w-full object-cover">
                                            </div>
                                            <div>
                                                <p class="font-bold text-slate-900 dark:text-slate-100 text-sm">{{ item.productName }}</p>
                                                <p class="text-[10px] text-slate-500 dark:text-slate-400 uppercase font-bold tracking-widest mt-1">Reference Product</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 font-medium text-sm text-slate-600 dark:text-slate-300">
                                        {{ (item.productPrice / 100)|number_format(2, '.', ',') }} €
                                    </td>
                                    <td class="px-6 py-4 text-center font-bold text-sm text-slate-900 dark:text-white">
                                        {{ item.quantity }}
                                    </td>
                                    <td class="px-6 py-4 text-right font-bold text-sm text-slate-900 dark:text-slate-100">
                                        {{ ((item.productPrice * item.quantity) / 100)|number_format(2, '.', ',') }} €
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100">
                        <h3 class="text-[10px] font-bold uppercase tracking-widest text-slate-400 mb-4">Shipping Address</h3>
                        {# On utilise le filtre |raw car notre getFormattedAddress() contient des balises <br/> #}
                        <p class="text-slate-600 text-sm leading-relaxed">
                            {{ order.deliveryAddress|raw }}
                        </p>
                    </div>
                    <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100">
                        <h3 class="text-[10px] font-bold uppercase tracking-widest text-slate-400 mb-4">Billing Address</h3>
                        <p class="text-slate-600 text-sm leading-relaxed">
                            {{ order.billingAddress|raw }}
                        </p>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-white dark:bg-slate-800 p-6 rounded shadow-sm border border-slate-200 dark:border-slate-700">
                    <h2 class="text-lg font-bold mb-6 border-b border-slate-100 dark:border-slate-700 pb-4 text-slate-900 dark:text-white">Order Summary</h2>
                    <div class="space-y-4">
                        <div class="flex justify-between text-sm text-slate-600 dark:text-slate-400">
                            <span>Subtotal</span>
                            <span class="font-medium text-slate-900 dark:text-slate-100">{{ (order.total / 100)|number_format(2, '.', ',') }} €</span>
                        </div>
                        <div class="flex justify-between text-sm text-slate-600 dark:text-slate-400">
                            <span>Shipping</span>
                            <span class="font-bold text-primary">0.00 €</span>
                        </div>
                        <div class="flex justify-between text-sm text-slate-600 dark:text-slate-400">
                            <span>Tax (VAT 20%)</span>
                            <span class="font-medium text-slate-900 dark:text-slate-100">Included</span>
                        </div>
                        <div class="pt-6 border-t border-slate-100 dark:border-slate-700">
                            <div class="flex justify-between items-baseline">
                                <span class="text-xs font-bold uppercase tracking-widest text-slate-900 dark:text-slate-100">Order Total</span>
                                <span class="text-3xl font-black text-primary">{{ (order.total / 100)|number_format(2, '.', ',') }} €</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-primary/5 dark:bg-primary/10 border border-primary/20 p-6 rounded flex flex-col items-center text-center">
                    <span class="material-symbols-outlined text-primary text-3xl mb-2">support_agent</span>
                    <h3 class="font-bold text-slate-900 dark:text-slate-100 mb-1 text-sm">Need Help?</h3>
                    <p class="text-xs text-slate-600 dark:text-slate-400 mb-4 leading-relaxed">If you have any questions regarding your order, please contact our 24/7 support.</p>
                    <button class="w-full py-2.5 border border-primary text-primary font-bold text-[10px] uppercase tracking-widest rounded hover:bg-primary hover:text-white transition-all">
                        Contact Support
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
