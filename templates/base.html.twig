{#
Calcul dynamique du nombre d'articles dans le panier depuis la session.
On additionne les quantités plutôt que de juste compter les lignes.
#}
{% set cart_count = 0 %}
{% for id, quantity in app.session.get('cart', []) %}
    {% set cart_count = cart_count + quantity %}
{% endfor %}

<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{% block title %}Minimalist Store{% endblock %}</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#29a847",
                        "background-light": "#f4f7f6",
                        "background-dark": "#131f16",
                    },
                    fontFamily: {
                        "display": ["Work Sans", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.125rem",
                        "lg": "0.25rem",
                        "xl": "0.5rem",
                        "full": "0.75rem"
                    },
                },
            },
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        .backdrop-blur-nav {
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
        }
    </style>

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}{% endblock %}
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-slate-100 antialiased min-h-screen flex flex-col">

<header class="fixed top-0 left-0 right-0 z-50 bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-nav border-b border-primary/10">
    <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">

        <a href="{{ path('app_products') }}" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
            <div class="text-primary">
                <span class="material-symbols-outlined text-3xl">eco</span>
            </div>
            <h1 class="text-xl font-bold tracking-tight uppercase">Minimalist</h1>
        </a>

        <nav class="hidden md:flex items-center gap-10">
            <a href="{{ path('app_products') }}" class="text-sm font-medium hover:text-primary transition-colors uppercase tracking-widest">Catalog</a>

            {# Lien dynamique vers le profil ou le login #}
            {% if app.user %}
                <a href="{{ path('app_user_profile') }}" class="text-sm font-medium hover:text-primary transition-colors uppercase tracking-widest">My Profile</a>
            {% else %}
                <a href="{{ path('app_register') }}" class="text-sm font-medium hover:text-primary transition-colors uppercase tracking-widest">Register</a>
            {% endif %}
        </nav>

        <div class="flex items-center gap-6">
            <a href="{{ app.user ? path('app_user_profile') : path('app_login') }}" class="hover:text-primary transition-colors" title="{{ app.user ? 'My Profile' : 'Login' }}">
                <span class="material-symbols-outlined">person</span>
            </a>

            <a href="{{ path('app_cart_index') }}" class="hover:text-primary transition-colors relative">
                <span class="material-symbols-outlined">shopping_bag</span>
                {% if cart_count > 0 %}
                    <span class="absolute -top-1 -right-1 bg-primary text-white text-[10px] w-4 h-4 rounded-full flex items-center justify-center font-bold">
                            {{ cart_count }}
                        </span>
                {% endif %}
            </a>

            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="hover:text-red-500 transition-colors text-slate-400" title="Logout">
                    <span class="material-symbols-outlined">logout</span>
                </a>
            {% endif %}
        </div>
    </div>
</header>

<main class="flex-grow pt-16 pb-12 max-w-7xl mx-auto px-6 w-full">
    <div class="mb-8">
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded shadow-sm" role="alert">
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined">check_circle</span>
                    <p class="font-medium">{{ message }}</p>
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded shadow-sm" role="alert">
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined">error</span>
                    <p class="font-medium">{{ message }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

    {% block body %}{% endblock %}

</main>

<footer class="bg-white dark:bg-slate-900 border-t border-primary/10 py-16 mt-auto">
    <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-4 gap-12">
        <div class="col-span-1 md:col-span-1">
            <div class="flex items-center gap-2 mb-6">
                <div class="text-primary">
                    <span class="material-symbols-outlined text-2xl">eco</span>
                </div>
                <h1 class="text-lg font-bold tracking-tight uppercase">Minimalist</h1>
            </div>
            <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
                Thoughtfully designed essentials for a mindful lifestyle. Quality materials, ethical production, timeless aesthetic.
            </p>
        </div>

        <div>
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] mb-6">Shop</h4>
            <ul class="space-y-4 text-sm text-slate-500 dark:text-slate-400">
                <li><a class="hover:text-primary transition-colors" href="{{ path('app_products') }}">Catalog</a></li>
                <li><a class="hover:text-primary transition-colors" href="{{ path('app_cart_index') }}">My Cart</a></li>
            </ul>
        </div>

        <div>
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] mb-6">Help</h4>
            <ul class="space-y-4 text-sm text-slate-500 dark:text-slate-400">
                <li><a class="hover:text-primary transition-colors" href="#">Shipping Info</a></li>
                <li><a class="hover:text-primary transition-colors" href="#">Returns & Exchanges</a></li>
            </ul>
        </div>

        <div>
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] mb-6">Newsletter</h4>
            <p class="text-xs text-slate-500 dark:text-slate-400 mb-4">Subscribe to receive updates, access to exclusive deals, and more.</p>
            <form class="flex flex-col gap-2" onsubmit="event.preventDefault();">
                <input class="bg-background-light dark:bg-slate-800 border-none px-4 py-3 text-sm rounded-sm focus:ring-1 focus:ring-primary w-full" placeholder="Email address" type="email"/>
                <button class="bg-slate-900 dark:bg-primary text-white py-3 px-6 rounded-sm text-xs font-bold uppercase tracking-widest hover:opacity-90 transition-opacity">
                    Subscribe
                </button>
            </form>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 mt-16 pt-8 border-t border-slate-100 dark:border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-[10px] text-slate-400 uppercase tracking-widest font-medium">© {{ 'now'|date('Y') }} Minimalist Store. All rights reserved.</p>
        <div class="flex gap-6">
            <a class="text-slate-400 hover:text-primary transition-colors" href="#"><span class="material-symbols-outlined text-lg">language</span></a>
            <a class="text-slate-400 hover:text-primary transition-colors" href="#"><span class="material-symbols-outlined text-lg">public</span></a>
            <a class="text-slate-400 hover:text-primary transition-colors" href="#"><span class="material-symbols-outlined text-lg">mail</span></a>
        </div>
    </div>
</footer>

</body>
</html>
