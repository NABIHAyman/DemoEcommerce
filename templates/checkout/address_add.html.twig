{% extends 'base.html.twig' %}

{% block title %}Add Address | Minimalist Store{% endblock %}

{% block body %}
    <div class="flex items-center justify-center py-8">
        <div class="w-full max-w-lg bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 p-8">
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Shipping Address</h1>
            <p class="text-slate-500 text-sm mb-6">Where should we send your order?</p>

            <form method="post" class="space-y-4">
                <div>
                    <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1.5">Address Alias (e.g., Home, Office)</label>
                    <input type="text" name="name" required placeholder="Home" class="w-full px-4 py-2.5 rounded border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-sm">
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1.5">First Name</label>
                        <input type="text" name="firstname" value="{{ app.user.firstname }}" required class="w-full px-4 py-2.5 rounded border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1.5">Last Name</label>
                        <input type="text" name="lastname" value="{{ app.user.lastname }}" required class="w-full px-4 py-2.5 rounded border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-sm">
                    </div>
                </div>

                <div>
                    <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1.5">Street Address</label>
                    <input type="text" name="street" required placeholder="123 Main St" class="w-full px-4 py-2.5 rounded border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-sm">
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1.5">Postal Code</label>
                        <input type="text" name="postalCode" required placeholder="75000" class="w-full px-4 py-2.5 rounded border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-sm">
                    </div>
                    <div>
                        <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1.5">City</label>
                        <input type="text" name="city" required placeholder="Paris" class="w-full px-4 py-2.5 rounded border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-sm">
                    </div>
                </div>

                <div>
                    <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1.5">Country</label>
                    <input type="text" name="country" required value="France" class="w-full px-4 py-2.5 rounded border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-sm">
                </div>

                <button type="submit" class="w-full bg-slate-900 hover:bg-primary text-white py-3.5 rounded font-bold text-sm uppercase tracking-widest transition-all mt-6 shadow-md">
                    Save & Continue
                </button>
            </form>
        </div>
    </div>
{% endblock %}
